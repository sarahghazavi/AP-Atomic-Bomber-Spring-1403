<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      onMouseClicked="#resetFocus" prefHeight="630.0" prefWidth="1000.0" stylesheets="@../CSS/style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainSystem">

    <Label fx:id="welcome" alignment="CENTER" layoutX="800" layoutY="220" prefHeight="40.0" prefWidth="160.0"
           styleClass="label" textAlignment="CENTER"/>

    <ImageView fx:id="avatar" fitHeight="180.0" fitWidth="150.0" layoutX="800.0" layoutY="40.0" pickOnBounds="true"
               preserveRatio="true"/>

    <Button layoutX="410.0" layoutY="100.0" mnemonicParsing="false" onMouseClicked="#startGame" prefHeight="45.0"
            prefWidth="180.0" styleClass="button" text="Start New Game"/>

    <Button layoutX="410.0" layoutY="170.0" mnemonicParsing="false" onMouseClicked="#continueGame" prefHeight="45.0"
            prefWidth="180.0" styleClass="button" text="Continue Game"/>

    <Button layoutX="410.0" layoutY="240.0" mnemonicParsing="false" onMouseClicked="#goToProfile" prefHeight="45.0"
            prefWidth="180.0" styleClass="button" text="Profile Menu"/>

    <Button layoutX="410.0" layoutY="310.0" mnemonicParsing="false" onMouseClicked="#showScoreboard" prefHeight="45.0"
            prefWidth="180.0" styleClass="button" text="Score Board"/>

    <Button layoutX="410.0" layoutY="380.0" mnemonicParsing="false" onMouseClicked="#goToSettings" prefHeight="45.0"
            prefWidth="180.0" styleClass="button" text="Settings"/>

    <Button layoutX="860.0" layoutY="550.0" mnemonicParsing="false" onMouseClicked="#exit" prefHeight="45.0"
            prefWidth="90.0" styleClass="sensitive" text="Exit"/>
</Pane>
