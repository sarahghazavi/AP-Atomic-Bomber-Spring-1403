<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      onMouseClicked="#resetFocus" prefHeight="630.0" prefWidth="1000.0" stylesheets="@../CSS/style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AvatarSystem">


    <Button fx:id="back" layoutX="860.0" layoutY="550.0" mnemonicParsing="false" onMouseClicked="#back"
            prefHeight="45.0" prefWidth="90.0" styleClass="sensitive" text="Back"/>

    <Button fx:id="choose" layoutX="410.0" layoutY="220.0" mnemonicParsing="false" onMouseClicked="#chooseAvatar"
            prefHeight="45.0" prefWidth="180.0" styleClass="button" text="Choose Avatar"/>
    <Button fx:id="upload" layoutX="410.0" layoutY="290.0" mnemonicParsing="false" onMouseClicked="#uploadAvatar"
            prefHeight="45.0" prefWidth="180.0" styleClass="button" text="Upload Image"/>
    <Button fx:id="drag" layoutX="410.0" layoutY="360.0" mnemonicParsing="false" onMouseClicked="#dragDrop"
            prefHeight="45.0" prefWidth="180.0" styleClass="button" text="Drag &amp; Drop Image"/>


    <ImageView fx:id="first" fitHeight="220.0" fitWidth="180.0" layoutX="130.0" layoutY="50.0" onMouseClicked="#pickOne"
               pickOnBounds="true" preserveRatio="true" styleClass="image" visible="false">
        <Image url="@../Images/av1.png"/>
    </ImageView>

    <ImageView fx:id="second" fitHeight="220.0" fitWidth="180.0" layoutX="410.0" layoutY="50.0"
               onMouseClicked="#pickOne" pickOnBounds="true" preserveRatio="true" styleClass="image" visible="false">
        <Image url="@../Images/av2.png"/>
    </ImageView>

    <ImageView fx:id="third" fitHeight="220.0" fitWidth="180.0" layoutX="690.0" layoutY="50.0" onMouseClicked="#pickOne"
               pickOnBounds="true" preserveRatio="true" styleClass="image" visible="false">
        <Image url="@../Images/av3.png"/>
    </ImageView>

    <ImageView fx:id="forth" fitHeight="220.0" fitWidth="180.0" layoutX="130.0" layoutY="300.0"
               onMouseClicked="#pickOne" pickOnBounds="true" preserveRatio="true" styleClass="image" visible="false">
        <Image url="@../Images/av4.png"/>
    </ImageView>

    <ImageView fx:id="fifth" fitHeight="220.0" fitWidth="180.0" layoutX="410.0" layoutY="300.0"
               onMouseClicked="#pickOne" pickOnBounds="true" preserveRatio="true" styleClass="image" visible="false">
        <Image url="@../Images/av5.png"/>
    </ImageView>


    <Label fx:id="firstL" alignment="CENTER" layoutX="180.0" layoutY="250.0" prefHeight="30.0" prefWidth="80.0"
           styleClass="label" text="Avatar 1" visible="false"/>
    <Label fx:id="secondL" alignment="CENTER" layoutX="460.0" layoutY="250.0" prefHeight="30.0" prefWidth="80.0"
           styleClass="label" text="Avatar 2" visible="false"/>
    <Label fx:id="thirdL" alignment="CENTER" layoutX="740.0" layoutY="250.0" prefHeight="30.0" prefWidth="80.0"
           styleClass="label" text="Avatar 3" visible="false"/>
    <Label fx:id="forthL" alignment="CENTER" layoutX="180.0" layoutY="500.0" prefHeight="30.0" prefWidth="80.0"
           styleClass="label" text="Avatar 4" visible="false"/>
    <Label fx:id="fifthL" alignment="CENTER" layoutX="460.0" layoutY="500.0" prefHeight="30.0" prefWidth="80.0"
           styleClass="label" text="Avatar 5" visible="false"/>

    <Label fx:id="avLabel" alignment="CENTER" layoutX="360" layoutY="550" prefHeight="30.0" prefWidth="280.0"
           styleClass="label" text="Please choose your avatar." visible="false"/>
</Pane>
